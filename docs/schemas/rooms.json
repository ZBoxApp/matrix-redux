{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Rooms",
    "description": "The Rooms state",
    "type": "object",
    "properties": {
        "isLoading": {
            "description": "Status of the server requests",
            "type": "boolean"
        },
        "banned": {
            "description": "The banned from rooms",
            "type": "array"
        },
        "joined": {
            "description": "The joined rooms",
            "type": "array"
        },
        "invited": {
            "description": "The invited rooms",
            "type": "array"
        },
        "leaved": {
            "description": "The leaved rooms",
            "type": "array"
        },
        "byIds": {
            "description": "Object with all the rooms",
            "type": "object",
            "oneOf": [{ "$ref": "file:./room.json" }]
        }
    },
    "required": [ "isLoading"]
}