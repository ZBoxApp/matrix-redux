{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "User",
    "description": "A Matrix User",
    "type": "object",
    "properties": { 
        "id": {
            "description": "The user id",
            "type": "string",
            "pattern": "^\\@[_\\-0-9a-zA-Z].*:.*"
        },
        "isLoading": {
            "description": "The loaded status",
            "type": "boolean"
        },
        "name": {
            "description": "User displayName",
            "type": "string"
        },
        "displayName": {
            "description": "User displayName",
            "type": "string"
        },
        "avatarUrl": {
            "description": "The user avatar url",
            "type": "string",
            "pattern": "^mxc:\/\/.*"
        },
        "presence": {
            "description": "The User presence status: online, offline",
            "type": "string",
            "pattern": "^(online|offline|unavailable)$"
        },
        "lastActiveAgo": {
            "description": "Seconds since last user interaction",
            "type": "integer"
        },
        "currentlyActive": {
            "description": "If the user is currently active",
            "type": "boolean"
        },
        "memberShips": {
          "description": "The users rooms by memberShips",
            "type": "object",
            "properties": {
                "joined": {
                    "description": "Array of joined rooms",
                    "type": "array"
                },
                "banned": {
                    "description": "Array of banned rooms",
                    "type": "array"
                },
                "leaved": {
                    "description": "Array of leaved rooms",
                    "type": "array"
                },
                "invited": {
                    "description": "Array of invited rooms",
                    "type": "array"
                },
            }
        },
        "messages": {
            "description": "Array of Ids of messages sent by this user",
            "type": "array"
        },
        "tags": {
            "description": "Array of Ids of tags events",
            "type": "array"
        }
    },
    "required": [ "id", "presence", "displayName"]
}
