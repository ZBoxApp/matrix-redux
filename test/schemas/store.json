{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Redux Store Schema",
    "description": "The full store",
    "type": "object",
    "properties": {
        "sync": {
            "description": "Sync State",
            "type": "object"
        },
        "rooms": {
            "description": "Rooms state",
            "type": "object"
        },
        "users": {
            "description": "Users state",
            "type": "object"
        },
        "events": {
            "description": "Events state",
            "type": "object"
        }
    },
    "required": [ "sync", "rooms", "users", "events" ]
}