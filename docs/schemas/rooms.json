{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Rooms",
    "description": "The Rooms state",
    "type": "object",
    "properties": {
        "isLoading": {
            "description": "Status of the server requests",
            "type": "boolean"
        },
        "currentRoomId": {
            "description": "The ID of the current room",
            "type": "string"
        },
        "byIds": {
            "description": "Object with all the rooms",
            "type": "object",
            "oneOf": [{ "$ref": "file:./room.json" }]
        }
    }
}